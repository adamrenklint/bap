{
  "name": "bap",
  "version": "0.0.1",
  "description": "Beatmaking and sequence composition toolkit, using Javascript and Web Audio",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamrenklint/bap.git"
  },
  "author": "Adam Renklint <adam@renklint.com> (http://adamrenklint.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adamrenklint/bap/issues"
  },
  "homepage": "https://github.com/adamrenklint/bap",
  "dependencies": {
    "ampersand-collection": "^1.4.5",
    "ampersand-state": "^4.5.3",
    "audio-context": "^0.1.0",
    "dilla": "^1.4.0-beta1",
    "lodash.debounce": "^3.0.3",
    "lodash.merge": "^3.1.0"
  },
  "devDependencies": {
    "3w": "0.0.4",
    "browserify": "^9.0.8",
    "chai": "^2.2.0",
    "istanbul": "^0.3.13",
    "jshint": "^2.6.3",
    "mocha": "^2.2.1",
    "rimraf": "^2.3.2",
    "watchify": "^3.1.0"
  },
  "config": {
    "coverageLimit": 1,
    "codeclimateCoverageId": "2e7a3b0c2e5c9d2b9ae79b528f98a3adb26efe2539425721323129199815df04"
  },
  "scripts": {
    "prestart": "watchify examples/metronome/main.js -o examples/metronome/bundle.js -v &",
    "start": "node node_modules/3w/3w.js examples --3000",
    "build": "browserify examples/metronome/main.js -o example/bundle.js",
    "test": "mocha -s 10 test/**/*.test.js",
    "pretest": "npm run lint",
    "test:watch": "npm test -- -w",
    "lint": "jshint lib/**/*.js",
    "clean": "rimraf coverage node_modules",
    "coverage": "istanbul cover _mocha -- test/**/*.test.js -R dot",
    "precoverage:check": "npm run coverage",
    "coverage:check": "istanbul check-coverage --statement $npm_package_config_coverageLimit --branch $npm_package_config_coverageLimit --function $npm_package_config_coverageLimit",
    "precoverage:report": "npm run coverage",
    "coverage:report": "CODECLIMATE_REPO_TOKEN=$npm_package_config_codeclimateCoverageId codeclimate < coverage/lcov.info"
  }
}
